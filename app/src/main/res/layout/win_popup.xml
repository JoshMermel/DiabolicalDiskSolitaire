<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popup_background"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/youWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/popup_background"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:singleLine="true"
        android:text="You Won!"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/popup_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/popup_background"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youWon"
        tools:layout_editor_absoluteY="169dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:singleLine="true"
            app:icon="@drawable/ic_baseline_view_comfy_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/gameplay_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/retry"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:singleLine="true"
            app:icon="@drawable/ic_baseline_cached_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/gameplay_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:singleLine="true"
            app:icon="@drawable/ic_baseline_forward_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/gameplay_background" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>